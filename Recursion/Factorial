#include<stdio.h>
#include<conio.h>
int factorial(int n);
int main()
{
    int num = 0;
    printf("\n Enter a Positive number to find itd factorial: ");
    scanf("%d",&num);
    printf("Factorial of %d is %d\n", num, factorial(num));
    getch();
    return 0;
}
int factorial(int n)
{
    if (n == 0)
    {
        return 1;
    }
    else
    {
        return n * factorial(n - 1);
    }
}

