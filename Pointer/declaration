#include<stdio.h>
#include<conio.h>
int main()
{
    int x = 10;   /// variable declaration
    int *p;    /// pointer declaration

    p = &x;     /// adress assign of x

    printf("Value of x: %d\n", x);      /// Print value of x
    printf("Address of x: %p\n", (void*)&x);   /// adress of x
    printf("Value of p (address of x): %p\n", (void*)p); /// Print the value of p (address of x)
    printf("Value pointed to by p: %d\n", *p); /// Print the value pointed to by p (value of x)
    getch();
    return 0;
}

